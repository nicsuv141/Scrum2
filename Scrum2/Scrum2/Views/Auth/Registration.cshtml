@model Datalayer.Models.User
@{
    ViewBag.Title = "Registration";
}


@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>


@using (Html.BeginForm())
{
  
    @Html.LabelFor(u => u.Signature)<br />
    @Html.TextBoxFor(u => u.Signature)<br />
    @Html.LabelFor(u => u.FirstName)<br />
    @Html.TextBoxFor(u => u.FirstName)<br />
    @Html.LabelFor(u => u.LastName)<br />
    @Html.TextBoxFor(u => u.LastName)<br />
    @Html.LabelFor(u => u.Email)<br />
    @Html.TextBoxFor(u => u.Email)<br />
    @Html.LabelFor(u => u.Telephone)<br />
    @Html.TextBoxFor(u => u.Telephone)<br />
    @Html.LabelFor(u => u.Password)<br />
    @Html.PasswordFor(u => u.Password)<br />
    
    <p>
        <button type="submit">Register!</button>
    </p>
}
